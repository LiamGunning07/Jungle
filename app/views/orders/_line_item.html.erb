<article>
<div class="line-item">
<img>
    <%= image_tag line_item.product.image.tiny.url, class: "product-image" %>
</img>
    <div class="product-details">
        <h4><%= line_item.product.name %></h4>
        <p><%= line_item.product.description %></p>
    </div>
    <div class="quantity-and-total">
        <p>Quantity: <%= line_item.quantity %></p>
        <p> Item Total: <%= line_item.item_price_cents * line_item.quantity / 100.0 %></p>
    </div>
</div>
<span>
</article>
